@model AnalyzeFormVm
@{
    ViewData["Title"] = "Scan";
}

<div class="cp-card">
    <h1 class="cp-title">Scan Carpet Progress</h1>
    <p class="cp-subtitle">Scan barcode and capture progress photo.</p>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Any(m => m.Value!.Errors.Count > 0))
    {
        <div class="cp-error">
            <ul class="mb-0 ps-3">
                @foreach (var entry in ViewData.ModelState.Values)
                {
                    @foreach (var err in entry.Errors)
                    {
                        <li>@err.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form id="analyzeForm" asp-controller="Progress" asp-action="Analyze" method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label asp-for="Barcode" class="cp-label">Barcode</label>
            <input asp-for="Barcode" class="cp-input" id="barcodeInput" placeholder="Scan or type barcode" inputmode="text" autocomplete="off" />
        </div>

        <hr class="cp-divider" />

        <input asp-for="Image" type="file" class="cp-file-input" id="fileInput" accept="image/*" capture="environment" />

        <div id="cameraArea" class="mb-3">
            <button type="button" id="cameraBtn" class="cp-camera-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/>
                    <circle cx="12" cy="13" r="4"/>
                </svg>
                Take Photo
            </button>
        </div>

        <div id="previewArea" class="mb-3 d-none">
            <div class="cp-preview-wrap">
                <img id="previewImg" class="cp-preview-img" alt="Captured photo" />
                <button type="button" id="retakeBtn" class="cp-retake">Retake</button>
            </div>
        </div>

        <button type="submit" id="analyzeBtn" class="cp-submit" disabled>Analyze</button>

    </form>
</div>

@section Scripts {
    <script>
        var fileInput = document.getElementById('fileInput');
        var barcodeInput = document.getElementById('barcodeInput');
        var cameraBtn = document.getElementById('cameraBtn');
        var cameraArea = document.getElementById('cameraArea');
        var previewArea = document.getElementById('previewArea');
        var previewImg = document.getElementById('previewImg');
        var retakeBtn = document.getElementById('retakeBtn');
        var analyzeBtn = document.getElementById('analyzeBtn');
        var objectUrl = null;

        function updateBtn() {
            analyzeBtn.disabled = !(barcodeInput.value.trim() && fileInput.files.length > 0);
        }

        function showPreview() {
            if (objectUrl) URL.revokeObjectURL(objectUrl);
            if (fileInput.files.length > 0) {
                objectUrl = URL.createObjectURL(fileInput.files[0]);
                previewImg.src = objectUrl;
                cameraArea.classList.add('d-none');
                previewArea.classList.remove('d-none');
            }
            updateBtn();
        }

        function clearAndRetake() {
            if (objectUrl) { URL.revokeObjectURL(objectUrl); objectUrl = null; }
            fileInput.value = '';
            previewImg.src = '';
            previewArea.classList.add('d-none');
            cameraArea.classList.remove('d-none');
            updateBtn();
            fileInput.click();
        }

        cameraBtn.addEventListener('click', function () { fileInput.click(); });
        fileInput.addEventListener('change', showPreview);
        retakeBtn.addEventListener('click', clearAndRetake);
        barcodeInput.addEventListener('input', updateBtn);
    </script>
}
