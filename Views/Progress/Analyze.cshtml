@model ConfirmProgressVm
@{
    ViewData["Title"] = "Review Progress";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <h2>Review Progress â€” @Model.Barcode</h2>

        <div class="row mb-4">
            <div class="col-md-6">
                <img src="@Model.ImagePath" alt="Carpet photo" class="img-fluid rounded border" />
            </div>
            <div class="col-md-6">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <form asp-controller="Progress" asp-action="Confirm" method="post">
                    <input type="hidden" asp-for="Barcode" />
                    <input type="hidden" asp-for="ImagePath" />

                    <div class="mb-3">
                        <label asp-for="ProgressDate" class="form-label">Work Date</label>
                        <input asp-for="ProgressDate" type="date" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="NormalPercent" class="form-label">Normal % (black marker)</label>
                        <input asp-for="NormalPercent" type="number" step="0.01" min="0" max="100" class="form-control" id="normalPct" />
                        <span asp-validation-for="NormalPercent" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="OtPercent" class="form-label">OT % (red marker)</label>
                        <input asp-for="OtPercent" type="number" step="0.01" min="0" max="100" class="form-control" id="otPct" />
                        <span asp-validation-for="OtPercent" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TotalPercent" class="form-label">Total %</label>
                        <input asp-for="TotalPercent" type="number" step="0.01" class="form-control" id="totalPct" readonly />
                    </div>

                    <button type="submit" class="btn btn-success w-100">Confirm &amp; Save</button>
                </form>
            </div>
        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to Upload</a>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('normalPct').addEventListener('input', recalc);
        document.getElementById('otPct').addEventListener('input', recalc);
        function recalc() {
            var n = parseFloat(document.getElementById('normalPct').value) || 0;
            var o = parseFloat(document.getElementById('otPct').value) || 0;
            document.getElementById('totalPct').value = (n + o).toFixed(2);
        }
    </script>
}
