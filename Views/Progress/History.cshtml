@model HistoryVm
@{
    ViewData["Title"] = "Progress History";
}

<div class="mt-4">
    <h2>Progress History</h2>

    <form method="get" asp-controller="Progress" asp-action="History" class="row g-2 mb-4">
        <div class="col-auto">
            <input type="text" name="barcode" value="@Model.BarcodeFilter" class="form-control" placeholder="Filter by barcode" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">Filter</button>
        </div>
        @if (!string.IsNullOrWhiteSpace(Model.BarcodeFilter))
        {
            <div class="col-auto">
                <a asp-controller="Progress" asp-action="History" class="btn btn-outline-secondary">Clear</a>
            </div>
        }
    </form>

    @if (Model.Logs.Count == 0)
    {
        <div class="alert alert-info">No records found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Barcode</th>
                        <th>Normal %</th>
                        <th>OT %</th>
                        <th>Total %</th>
                        <th>Saved At</th>
                        <th>Photo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.Logs)
                    {
                        <tr>
                            <td>@log.ProgressDate.ToString("yyyy-MM-dd")</td>
                            <td>@log.Barcode</td>
                            <td>@log.NormalPercent.ToString("F2")</td>
                            <td>@log.OtPercent.ToString("F2")</td>
                            <td><strong>@log.TotalPercent.ToString("F2")</strong></td>
                            <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td><a href="@log.ImagePath" target="_blank">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">New Upload</a>
</div>
